{
  "credentials_required": {
    "openai": {
      "type": "openAiApi",
      "name": "OpenAI Credential",
      "data": {
        "apiKey": "YOUR_OPENAI_API_KEY"
      },
      "how_to_get": "https://platform.openai.com/api-keys"
    },
    "news_api": {
      "type": "httpQueryAuth",
      "name": "NewsAPI Credential",
      "data": {
        "name": "apiKey",
        "value": "YOUR_NEWSAPI_KEY"
      },
      "how_to_get": "https://newsapi.org/register",
      "note": "Free tier: 100 requests/day, cukup untuk daily automation"
    },
    "huggingface": {
      "type": "httpHeaderAuth",
      "name": "HuggingFace Credential",
      "data": {
        "name": "Authorization",
        "value": "Bearer YOUR_HUGGINGFACE_TOKEN"
      },
      "how_to_get": "https://huggingface.co/settings/tokens",
      "note": "Gunakan untuk generate gambar dengan Flux AI"
    },
    "wordpress": {
      "type": "httpHeaderAuth",
      "name": "WordPress Credential",
      "data": {
        "name": "Authorization",
        "value": "Basic BASE64(username:application_password)"
      },
      "how_to_get": "WordPress Admin > Users > Application Passwords",
      "note": "Generate Application Password, lalu encode dengan base64"
    },
    "telegram": {
      "type": "telegramApi",
      "name": "Telegram Bot Credential",
      "data": {
        "accessToken": "YOUR_BOT_TOKEN"
      },
      "how_to_get": "Chat with @BotFather on Telegram, use /newbot command",
      "note": "Simpan bot token dengan aman"
    },
    "google_sheets": {
      "type": "googleSheetsOAuth2Api",
      "name": "Google Sheets Credential",
      "data": {
        "clientId": "YOUR_CLIENT_ID",
        "clientSecret": "YOUR_CLIENT_SECRET"
      },
      "how_to_get": "https://console.cloud.google.com/apis/credentials",
      "note": "Enable Google Sheets API, create OAuth 2.0 credentials"
    }
  },
  "setup_order": [
    "1. OpenAI API Key (paling penting untuk AI research & content)",
    "2. NewsAPI Key (untuk fetch berita crypto)",
    "3. Telegram Bot (untuk publish & notifikasi)",
    "4. HuggingFace Token (untuk generate gambar)",
    "5. WordPress (jika mau auto-publish ke blog)",
    "6. Google Sheets (untuk archive/tracking)"
  ],
